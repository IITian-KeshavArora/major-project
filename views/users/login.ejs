<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login for Airbnb</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>

            <div class="mb-3">         <!--Our screen is divided into 12 columns bydefault-->
                <label for="username" class="form-label">Username: </label>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input required type="text" placeholder="Enter your username" id="username" name="username" class="form-control">
            </div>


            <div class="mb-3">         <!--Our screen is divided into 12 columns bydefault-->
                <label for="password" class="form-label">Password: </label>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input required type="password" placeholder="enter your password" id="password" name="password" class="form-control">
            </div>
            <button class="btn btn-success signup">Login</button>
        </form>
    </div>
</div>