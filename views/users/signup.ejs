<% layout('layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup for Airbnb</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>

            <div class="mb-3">         <!--Our screen is divided into 12 columns bydefault-->
                <label for="username" class="form-label">Username: </label>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input required type="text" placeholder="Enter your username" id="username" name="username" class="form-control">
                <!-- This message will be shown in case of valid input -->
                <div class="valid-feedback">
                    Looks good!
                </div>
                <!-- This message will be shown in case of invalid inputs -->
                <div class="invalid-feedback">
                    Username is required!!
                </div>
            </div>

            <div class="mb-3">         <!--Our screen is divided into 12 columns bydefault-->
                <label for="email" class="form-label">Email: </label>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input required type="email" placeholder="enter your email" id="email" name="email" class="form-control">
                <!-- This message will be shown in case of valid input -->
                <div class="valid-feedback">
                    Looks good!
                </div>
                <!-- This message will be shown in case of invalid inputs -->
                <div class="invalid-feedback">
                    not a valid email!!
                </div>
            </div>

            <div class="mb-3">         <!--Our screen is divided into 12 columns bydefault-->
                <label for="password" class="form-label">Password: </label>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <input required type="password" placeholder="enter your password" id="password" name="password" class="form-control">
                <!-- This message will be shown in case of valid input -->
                <div class="valid-feedback">
                    Looks good!
                </div>
                <!-- This message will be shown in case of invalid inputs -->
                <div class="invalid-feedback">
                    password is required!!
                </div>
            </div>
            <button class="btn btn-success signup">SignUp</button>
        </form>
    </div>
</div>